<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ArticleTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CardStyle">
        <item name="android:layout_marginRight">10sp</item>
        <item name="android:layout_marginLeft">10sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginBottom">10sp</item>
    </style>

    <style name="ArticleText">
        <item name="android:fontFamily">@font/lato</item>
    </style>
    <style name="ArticleAuthor">
        <item name="android:textColor">#bfbfbf</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>
