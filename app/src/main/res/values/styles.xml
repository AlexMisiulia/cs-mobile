<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomMenu">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/latoregular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:lineHeight">12sp</item>
        <item name="android:textColor">#9B9B9B</item>
    </style>

    <style name="FilterButton">
        <item name="android:layout_marginLeft">10sp</item>
        <item name="android:layout_marginRight">10sp</item>
    </style>

    <style name="ArticlesList">

    </style>

    <style name="ArticlesList.Author">
        <item name="android:gravity">center</item>
        <item name="android:text">@string/article_author_placeholder</item>
    </style>

    <style name="ArticlesList.Content">
        <item name="android:maxLines">3</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="ArticleItem">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ArticleItem.createdAt"></style>

    <style name="ArticleItem.Title"></style>

    <style name="ArticleItem.Author">
        <!--        <item name="android:gravity">center</item>-->
    </style>

    <style name="ArticleItem.Content">
    </style>
</resources>
