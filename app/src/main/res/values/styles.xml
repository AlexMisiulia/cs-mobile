<resources xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TranslucentStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomMenu">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/latoregular</item>
        <item name="android:textSize">10sp</item>
        <item name="lineHeight">12sp</item>
        <item name="android:textColor">#9B9B9B</item>
        <item name="android:background">#232323</item>
    </style>

    <style name="FilterButton">
        <item name="android:layout_marginLeft">10sp</item>
        <item name="android:layout_marginRight">10sp</item>
    </style>

    <style name="ArticlesList" />

    <style name="ArticlesList.Image">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">78dp</item>
    </style>

    <style name="ArticlesList.Author">
        <item name="android:gravity">center</item>
        <item name="android:text">@string/article_author_placeholder</item>
    </style>

    <style name="ArticlesList.Content">
        <item name="android:maxLines">3</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ArticleItem">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ArticleItem.createdAt" />

    <style name="ArticleItem.Title" />

    <style name="ArticleItem.Author">
        <!--        <item name="android:gravity">center</item>-->
    </style>

    <style name="ArticleItem.Content" />

    <style name="PractitionerList" />

    <style name="PractitionerList.Name" />

    <style name="PractitionerList.Avatar" />

    <style name="PractitionerList.Categories">
        <item name="android:layout_marginStart">3dp</item>
    </style>

    <style name="PractitionerCarousel" />

    <style name="PractitionerCarousel.Name" />

    <style name="PractitionerCarousel.Categories" />

    <style name="Promo" />


    <style name="Promo.Articles" />

    <style name="Promo.Articles.Image">
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="Promo.Articles.Title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HomeFragmentButtons" />

    <style name="HomeFragmentButtons.LoadMoreArticles">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="EventsList" />

    <style name="EventsList.Image">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="EventsList.Title" />

    <style name="PractitionerItem" />

    <style name="PractitionerItem.Card">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="PractitionerItem.Name" />

    <style name="PractitionerItem.Image" />

    <style name="PractitionerItem.Description" />

    <style name="PractitionerItem.Categories" />

    <style name="SpinKitStyle">
        <item name="android:background">@color/spinkitbackground</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="PractitionerPage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="PractitionerPage.WebSite">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#34a4eb</item>
    </style>

    <style name="PractitionerPage.Avatar">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">240dp</item>
        <item name="android:src">@drawable/missing_avatar</item>
    </style>

    <style name="PractitionerPage.Name">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="PractitionerPage.BIO">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="PractitionerPage.CategoryChip"/>

    <style name="PractitionerPage.BIOCard" parent="CardView">"
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">1dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
</resources>
