<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eventTitleTv"
            style="@style/EventPage.EventConditions" />

        <TextView
            android:id="@+id/eventDescriptionTv"
            style="@style/EventPage.EventDescription" />

        <ImageView
            android:id="@+id/eventPageImageView"
            style="@style/EventPage.Image" />

        <TextView
            android:id="@+id/eventTypeTv"
            style="@style/EventPage.Type" />

        <TextView
            android:id="@+id/eventLocation"
            style="@style/EventPage.EventLocation" />

        <TextView
            android:id="@+id/eventPriceTv"
            style="@style/EventPage.EventPrice"
            android:text="@string/loading_placeholder" />

        <TextView
            android:id="@+id/eventOrganizationNameTv"
            style="@style/EventPage.EventOrganizationName" />

    </LinearLayout>
</ScrollView>