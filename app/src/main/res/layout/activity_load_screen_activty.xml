<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loadScreenActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/load_screen_background"
    tools:context=".activity.loadScreen.LoadScreenActivity">

    <ImageView
        android:id="@+id/loadScreenImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loadScreenErrorMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/on_network_error"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/loadScreenImage"
        app:layout_constraintStart_toStartOf="@+id/loadScreenImage"
        app:layout_constraintTop_toBottomOf="@+id/loadScreenImage" />

    <ProgressBar
        android:id="@+id/loadScreenProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loadScreenErrorMsg" />

    <Button
        android:id="@+id/reloadLoadScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reloadLoadScreenButton"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/loadScreenProgressBar"
        app:layout_constraintStart_toStartOf="@+id/loadScreenProgressBar"
        app:layout_constraintTop_toBottomOf="@+id/loadScreenErrorMsg" />
</androidx.constraintlayout.widget.ConstraintLayout>